generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id        String @id @default(cuid())
  name      String
  email     String @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model Category {
  id        String @id @default(cuid())
  name      String
  products  Product[]
  createdAt DateTime @default(now())
}

model Product {
  id          String @id @default(cuid())
  name        String
  priceBuy    Int
  priceSell   Int
  stock       Int @default(0)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
}